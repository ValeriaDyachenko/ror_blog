<h2 class="edit-block-center">Edit Post</h2>
<a href="/ %>" class=" btn btn-success ">Back to Post</a>
<br><br>
<!-- форма редактирование записи -->
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
  <!-- контейнер ошибок -->
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited
            this post from being saved:</h2>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <!-- контейнер редактирования содержимого записи -->
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body , :rows => "10"%>
    </p>
    <p class="pcenter">
      <%= f.submit "Update" , :class => "btn btn-success"%>
      <%= link_to 'Delete', post_path(@post),
           method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-success " %>
    </p>
<% end %>